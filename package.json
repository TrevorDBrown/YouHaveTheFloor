  "bugs": {
    "url": "https://github.com/TrevorDBrown/YouHaveTheFloor/issues"
  },
  "homepage": "https://github.com/TrevorDBrown/YouHaveTheFloor#readme",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "async": "^3.2.0",
    "bootstrap": "^4.5.3",
    "cheerio": "^1.0.0-rc.3",
    "express": "^4.17.1",
    "jquery": "^3.5.1",
    "mysql": "^2.18.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/cheerio": "^0.22.23",
