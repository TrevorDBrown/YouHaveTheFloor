{
  "name": "youhavethefloor",
  "version": "1.0.0",
  "description": "A platform for basic social interactions.",
  "main": "bin/app.js",
  "scripts": {
    "removeUI": "rm -rf ./bin/ui/",
    "copyUI": "cp -r ./src/ui/* ./bin/ui/",
    "copyPrivate": "cp -r ./src/private/* ./bin/private/",
    "build": "rm -r ./bin && tsc && npm run copyUI && npm run copyPrivate",
    "cleanAllRun": "npm run build && node .",
    "cleanUIRun": "npm run removeUI && npm run copyUI && node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TrevorDBrown/YouHaveTheFloor.git"
  },
